{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "short_name": "NOWPASS",
  "description": "__MSG_extDesc__",
  "version": "0.1.3",
  "default_locale": "en",
  "author": "Yves Hoppe <yves.hoppe@nowpass.org>",
  "minimum_chrome_version": "56.0",
  "icons": {
    "16": "static/img/icon-32.png",
    "32": "static/img/icon-32.png",
    "64": "static/img/icon-64.png",
    "128": "static/img/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "static/img/icon-32.png",
      "32": "static/img/icon-32.png"
    },
    "default_popup": "views/start.html#/popup",
    "default_title": "__MSG_ext_default_title__"
  },
  "background": {
    "scripts": [
      "static/js/axios.min.js",
      "static/js/background.min.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "static/js/content-script.min.js"
      ],
      "all_frames": true
    }
  ],
  "options_page": "views/start.html#/options",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications",
    "contextMenus",
    "clipboardWrite",
    "clipboardRead",
    "declarativeWebRequest",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "views/start.html",
    "views/popup.html"
  ]
}
